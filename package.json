{
  "name": "instance-manager",
  "version": "1.0.0",
  "description": "Manage references to dynamically created classes and their instances.",
  "homepage": "https://github.com/JuroOravec/instance-manager#readme",
  "repository": "github:JuroOravec/instance-manager",
  "bugs": "https://github.com/JuroOravec/instance-manager/issues",
  "author": {
    "name": "Juro Oravec",
    "email": "juraj.oravec.josefson@gmail.com"
  },
  "keywords": [],
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm test"
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "npm run test:cov",
    "test:cov": "run-s test:jest codecov:upload",
    "test:jest": "jest --config jestconfig.json",
    "codecov:upload": "dotenv bash scripts/upload_codecov.sh",
    "format": "prettier --write 'src/**/*.{ts,js}'",
    "format:check": "prettier --check 'src/**/*.{js,mdx}'",
    "lint": "tslint -p tsconfig.json",
    "validate": "run-s test lint format:check",
    "clean": "shx rm -rf node_modules/ dist/",
    "typedoc:markdown": "typedoc --out ./docs/typedoc --mode file --excludeNotExported --exclude '**/__tests__/**/*' --tsconfig ./tsconfig.json --readme none --plugin typedoc-plugin-markdown ./src/",
    "typedoc:html": "typedoc --out ./docs/typedoc --mode file --excludeNotExported --exclude '**/__tests__/**/*' --tsconfig ./tsconfig.json --readme none --plugin none ./src/",
    "setup": "npm run build",
    "prerelease": "run-s install setup validate && git-authors-cli && git add .",
    "release": "standard-version",
    "postrelease": "run-s release:*",
    "release:tags": "git push --follow-tags origin master",
    "release:github": "conventional-github-releaser -p angular",
    "prepublishOnly": "npm test && npm run lint",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/travis-cli": "^8.3.5",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^25.2.1",
    "all-contributors-cli": "^6.14.1",
    "codecov": "^3.6.5",
    "commitizen": "^4.0.4",
    "conventional-github-releaser": "^3.1.3",
    "dotenv-cli": "^3.1.0",
    "git-authors-cli": "^1.0.24",
    "github-label-sync": "^1.4.6",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.3",
    "semantic-release": "^17.0.4",
    "semantic-release-cli": "^5.2.3",
    "semantic-release-verify-deps": "^1.0.2",
    "shx": "^0.3.2",
    "standard-version": "^7.1.0",
    "ts-jest": "^25.3.1",
    "tsc": "^1.20150623.0",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.17.4",
    "typedoc-plugin-markdown": "^2.2.17",
    "typescript": "^3.8.3"
  },
  "dependencies": {}
}
